<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.honeydew.honeydewlist">

    <!--Permissions for internet-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HoneydewList">
        <activity
            android:name=".ui.login.RegisterSecurityQuestionsActivity"
            android:label="Security Questions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.login.RegisterActivity" />
        </activity>
        <activity
            android:name=".ui.login.RegisterActivity"
            android:label="Register">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.login.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.home_screen.HomeScreen"
            android:label="Home Screen" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="Login" />
        <activity
            android:name=".MainActivity"
            android:label="Honeydew List"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>